{
  "name": "robofriends",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://p4p4j0hn.github.io/robofriends",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p4p4j0hn/robofriends"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "overrides": {
    "react-scripts": {
      "nth-check": "^2.1.1"
    },
    "resolve-url-loader": {
      "postcss": "^8.4.33"
    },
    "css-select": {
      "nth-check": "^2.2.2"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "tachyons": "^4.12.0"
  },
  "scripts": {
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cfaester/enzyme-adapter-react-18": "^0.8.0",
    "@eslint/js": "^9.12.0",
    "@types/enzyme": "^3.10.18",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/redux": "^3.6.31",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.1",
    "gh-pages": "^6.1.1",
    "globals": "^15.11.0",
    "husky": "^8.0.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^15.2.10",
    "nock": "^13.5.5",
    "prettier": "^3.3.3",
    "react-scripts": "^5.0.1",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.4",
    "typescript": "^5.6.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "./src/setupTests.js",
          "./src/index.js"
        ],
        "rules": {
          "jest/require-hooks": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.{json,html}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
